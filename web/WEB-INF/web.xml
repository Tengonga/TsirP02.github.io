<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    
    <welcome-file-list>
        <welcome-file>bienvenida.xhtml</welcome-file>
    </welcome-file-list>
    
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    
    <!-- SECURITY CONSTRAINT SIN HTTPS -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>√Årea Protegida</web-resource-name>
            <url-pattern>/carrito.xhtml</url-pattern>
            <url-pattern>/facturacion.xhtml</url-pattern>
            <url-pattern>/categorias.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>clientUser</role-name>
        </auth-constraint>
        <!-- COMENTADO TEMPORALMENTE -->
        <!--
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
        -->
    </security-constraint>
    
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>file</realm-name>
        <form-login-config>
            <form-login-page>/login.xhtml</form-login-page>
            <form-error-page>/loginError.xhtml</form-error-page>
        </form-login-config>
    </login-config>
    
    <security-role>
        <role-name>clientUser</role-name>
    </security-role>
</web-app>